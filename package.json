{
  "name": "react-bun-k8s",
  "version": "1.0.0",
  "scripts": {
    "dev": "bun --bun dev",
    "build": "bunx postcss src/index.css -o dist/index.css && bun build --outdir dist --target browser src/index.tsx && cp public/index.html dist/",
    "preview": "bun --bun preview",
    "test": "jest",
    "test:e2e": "playwright test",
    "check": "./scripts/check-prerequisites.sh",
    "container:build": "./scripts/build.sh",
    "container:run": "make container-run",
    "container:push": "./scripts/push.sh",
    "deploy": "./scripts/deploy.sh",
    "setup": "make dev-setup",
    "help": "make help"
  },
  "dependencies": {
    "lucide-react": "^0.546.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4.1.15",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.21",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.1.15",
    "ts-jest": "^29.4.5",
    "typescript": "^5.4.0"
  }
}
