# Example Terraform variables file
# Copy this to terraform.tfvars and customize for your environment

# Project Configuration
project_name = "product-mindset"
environment  = "dev"  # dev, staging, prod

# GitHub Configuration
github_org  = "stevei101"        # Your GitHub organization
github_repo = "hack-a-product"   # Your repository name

# AWS Configuration
aws_region = "us-east-1"

# Domain Configuration (optional)
domain_name = ""  # Leave empty if not using custom domain

# OIDC Provider
create_github_oidc_provider = true

# Common Tags
tags = {
  Project     = "product-mindset"
  Environment = "dev"
  ManagedBy   = "terraform"
  Owner       = "stevei101"
  Purpose     = "agentic-application"
}
